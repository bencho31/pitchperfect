<div class="container">
  <div class="row">
    <div class="col col-xs-12 col-sm-8">
      <%= render 'video_description' %>
    </div>
    <div class="col col-xs-12 col-sm-4">
      <div class="row">
        <div class="pitch-card">
          <%= cl_image_tag user_avatar(@pitch.user), class: "img-round" %>
          <%=  @pitch.user.first_name %>
          <%=  @pitch.user.last_name %>
        </div>
      </div>
      <div class="row">
        <div class="pitch-card">
         <h4 class="text-center">
          <%=  @pitch.name %>
         </h4>
         <div class="left">
           <h5 > <%=  @pitch.topic %> </h5>
           <h5 > <%= @pitch.target %> </h5>
           <h5 >  <%=  @pitch.user.first_name  %>
                  <%= @pitch.user.last_name  %> </h5>
           <h6 > <%=  @pitch.duration %> min. | <%=  @pitch.created_at.strftime("%b %d, %Y") %></h6>
         </div>
         <div>
          <%= link_to 'Edit |',    edit_pitch_path(@pitch)  %>
          <%= link_to 'Delete', @pitch_path, method: :delete %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <% if @pitch.feedbacks.any? %>
      <%= render 'pitches/feedback_present' %>
    <% else %>
      <%= render 'pitches/no_feedback' %>
    <% end %>
  </div>
  <div class="row">
    <div class="text-center ">
      <%= link_to "Add Feedback",new_pitch_feedback_path(@pitch), class: "btn btn-danger btn-lg"%>
    </div>
  </div>
</div>
