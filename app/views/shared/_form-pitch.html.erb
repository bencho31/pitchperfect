<div class="container">
  <div class="col-xs-12 col-sm-6 col-md-offset-1 col-md-4">
     <div class="petitecard">
       <h2><strong>Define your pitch</strong></h2>
        <div class="form-group">
          <%= simple_form_for(@pitch, method: :post, url: new_pitch_path) do |f| %>
           <%= f.error_notification %>
          <div class="form-row">
             <div class="col-md-12">
                 <%= f.input :name,
                  label: false,
                  required: true,
                  autofocus: true ,
                  placeholder: " Tilte of the pitch" %>
               </div>
              <div class="col-md-12">
                  <%= f.input :topic,
                    label: false,
                    required: true,
                    autofocus: true ,
                    placeholder: "Topic" %>
                </div>
              <div class="col-md-12">
                 <%= f.input :duration,
                  label: false,
                  required: true,
                  autofocus: true ,
                  placeholder: "Duration" %>
               </div>
              <div class="col-md-12">
                  <%= f.input :target,
                  label: false,
                  required: true,
                  autofocus: true ,
                  placeholder: "Target" %>
               </div>
             <div class="col-md-12">
                <%= f.input :transcript,
                  label: false,
                  required: true,
                  autofocus: true ,
                  placeholder: "Transcript" %>
              </div>
                      <div class="form-actions">
              <%= f.button :submit, "Upload a pitch", class: "btn-primary" %>
              <%= f.button :submit, "Create a pitch", class: "btn-primary" %>
            </div>
           </div>
         </div>



            <% end %>
      </div>
    </div>
  </div>
